<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:shape="rectangle">
        <shape>
            <solid android:color="#D9D9D9" />
            <!-- Isian utama dengan transparansi 100% -->
            <solid android:color="#D9D9D9" />
            <!-- Stroke pertama dengan alpha (transparansi) 100% -->
            <stroke android:width="-1dp" android:color="#16598F" />
            <!-- Stroke kedua dengan alpha (transparansi) 20% -->
            <stroke android:width="-1dp" android:color="#16598F" android:alpha="0.2" />
            <!-- Corner radius sebesar 15dp -->
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>